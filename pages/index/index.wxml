<wxs src="./index.wxs" module="utils" />
<view class="top">
</view>
  <view class="header" bindtap="goSearchPage">
    <i class="fal fa-search myi"></i>
		<view class="mysear">搜索商品</view>
  </view>
<view class="mimg">
  <swiper autoplay="true"  class="swiper-box" indicator-dots="true">
    <swiper-item wx:for="{{ads}}" wx:key="key">
      <image class="mimgimg" src="{{item.images_url}}" mode="" />
    </swiper-item>
  </swiper>
</view>
<view class="div_div">
  
  <swiper class="swiper-one" current="{{currentIndex}}">
    <swiper-item wx:for="{{pageNumber}}" wx:key="index" wx:for-index="indexName">

      <view wx:if="{{index<(indexName+1)*10 && indexName*8<=index}}" wx:for="{{tableList}}" wx:key="unique" class="{{firstclass==item.id?'boxshow':'xxboxshow'}} bannerIm" bindtap="goUrl" data-url="{{item}}">
				<!-- <text class="mycarcount"  >{{item.count}}</text> -->
        <image wx:if="{{item.icon!=''}}" src="{{item.icon}}"  class="imagesss" />
        <image wx:else src="/images/index/rk_6.jpg" style="height:66rpx;" class="imagesss" />
        <view>{{item.name}}
					<text  wx:if="{{item.count}}"  class="count">{{item.count}}</text>
				</view>
				
				<view></view>
      </view>
    </swiper-item>
  </swiper>

  <c style="height:25rpx;"></c>
</view>
<view class="allshop">
	<image  src="http://second.chchgg.com/static/banner/sy-banner-2.png" mode="heightFix"></image>
</view>
<view class="scroll_table"  id="main" bindtap="myscorll">
  <scroll-view scroll-x>
    <view class="swiper-tab">
      <view wx:for="{{tableListre}}" wx:key="unique" class="swiper-tab-item {{currentTab==item.id?'active':''}}" data-current="{{item.id}}" bindtap="clickTab">{{item.name}}
			<text class="mycarcount" wx:if="{{item.count}}">{{item.count}}</text>
      </view>
    </view>
  </scroll-view>
</view>
<view class="back"  wx:if="{{back == true}}" bindtap="backTop">
	<view>返回</view>
	<view>顶部</view>
</view>
	<view wx:if="{{tableListone!=''}}" class="main" bindtap="myscorll">
		<view class="left">
			<scroll-view scroll-y="true" class="ss" style="height: 1000rpx" bindscroll="scroll1" scroll-into-view="true" scroll-with-animation="true">

				<view wx:for="{{tableListone}}" wx:if="{{item.goods !=''}}" class="{{classfiySelect === item.id ? 'leftActive]':'leftbox'}}" wx:key="unique">

					<view data-id='{{item.id}}' bindtap="clickLeftItem" class="my-left-flex">
						<text > {{item.name}} </text>
					
					</view>

				</view>

			</scroll-view>
		</view>
		<view class='right'>
			<scroll-view scroll-y="true" style="height:1000rpx" scroll-with-animation="true" bindscroll="scroll" scroll-into-view="{{'inToview'+classfiySelect2}}">
			<view wx:for="{{tableListone}}" class="leftTitle" wx:if="{{item.goods !=''}}" wx:key="unique">
					<view id="{{'inToview'+item.id}}" >
					<block wx:for="{{item.goods}}" wx:for-item="items" wx:key="index" >
				<view bindtap="clickse" data-id="{{items}}" data-index="{{index}}">
					<view class="topimg">
						<image  wx:if="{{items.images}}" lazy-load="true" src="{{items.images}}"></image>
						<image wx:else src="http://second.chchgg.com/static/index/default/images/logo.jpg"></image>
					</view>
					<view class="centername">
					<view class="carlogo">
						<image src="../../images/index/car.png"></image>
					</view>
						<view class="leftname">
							<!-- <view class="nametitle">{{items.title}}</view> -->
								<view class="{{classfiySelect == item.id ? 'nametitle_active' : 'nametitle' }}">{{items.title}}</view>
							<view class="nameprice"><text class="my1">￥</text><text class="my2">{{items.price}}</text><text class="my3">/{{items.inventory_unit}}</text></view>
						</view>
						<view class="rightname"><text>{{items.brand_name}}</text>
						</view>
					</view>
					<view class="bottomName" bindtap="toOldFood" data-value="{{item.name}}">
					<i class="fal fa-angle-double-right myri"></i>
					<text class="r2" >点击查看新菜推荐</text></view>
				</view>
					</block>
					</view>
				</view>
			</scroll-view>
			<view class="cover_screen" bindtap="hideBuyModal" wx:if="{{showModalStatus}}"></view>
			<view animation="{{animationData}}" class="buy_box" wx:if="{{showModalStatus}}">
	
			<view class="myb">
			<view class="mflex">
				<view class="imgb"><image class="imgurl" src="{{imgurl}}"></image></view>
				<view>
					<view class="mname">{{shopName}}</view>
					<view class="shopPrice"><text>￥</text>{{utils.getPrice(shopPrice,num)}}</view>
				</view>
			</view>
				<view>	<image bindtap="clickcancel" class="myclose" src="../../images/index/gwc-gb@2x.png"></image></view>
			</view>
				<view class="gg">
					<view class="one" wx:for="{{tableid}}" wx:key="key">
						<text class="jt">{{item.title}}</text>
						<view class="onebox">
							<view style="margin-top:20rpx" wx:for="{{item.value}}" wx:key="unique" data-index="{{indexName}}" data-indx="{{item.title}}" bindtap="clickgui" wx:for-item="itemName" wx:for-index="indexName">
								<text class="{{itemName == true ? 'itemActive':'item'}}"  >{{indexName}} </text>
							</view>
						</view>
					</view>
				</view>
        <view class="bz">
          <text>备注： </text>
          <input placeholder="请输入备注" placeholder-style="color:rgba(170,170,170,1);font-size:24rpx;" bindinput="modalInput" data-name="inputBz"></input>
        </view>
				<view class="liang">
					<view class="mycount" >购买数量 </view>
						<view class="addbox">
							<view  class="jiabox" bindtap="bindPlus">
							<image class="addjian" src="../../images/index/gwc-jia@2x.png"></image>
						</view>
						<view class="numbercount">
							<input type="number" bindchange="bindManual" value="{{num}}" />
						</view>
						<view  class="jiabox" bindtap="bindMinus">
						<image class="addjian" src="../../images/index/gwc-jian@2x.png"></image>
						</view>
						</view>
				</view>

				<view class="mybottom">
					<view class="btn1" bindtap="determine">
						<image class="gscg1" src="../../images/index/gwc-gscg@2x.png"></image>
						<text>酒店采购</text>
					</view>
					<view class="btn2" bindtap="clickselet">
					<image class="gscg" src="../../images/index/gwc-grcg@2x.png"></image>
						<text>个人采购</text>
					</view>
				</view>
			</view>

			<view wx:else class="group">
				<view wx:for="{{groupShop}}" wx:key="index" class="groupBox {{item.color_type == 1?'groupBack':''}} {{item.color_type == 2?'groupBack2':''}} {{item.color_type == 3?'groupBack3':''}}">
					<view class="shopName text-wei   {{item.color_type == 1?'shopColor':''}} {{item.color_type == 2?'shopColor2':''}} {{item.color_type == 3?'shopColor3':''}}">{{item.name}}</view>
					<view class="textColor-group text-wei">
						{{item.start_time}}开始下单{{item.send_time}}点前配送
					</view>
					<view class="grouostart" bindtap="clickPurchase" data-index="{{index}}">
						<view class="grouostart-left">
							<view class="start">
								<view class="startPrice shopColor text-wei">组团开始价
									<text class="donwn"> </text>
								</view>
								<view class="shopSpecifications">{{item.spec[0].title}}:{{item.spec[0].value[0]}}</view>
							</view>
							<view class="sprice">
								<text class="startWei">￥</text>
								<text class="initialPrice">{{item.price}}</text>
								<text class="txtCol-group startWei">/{{item.inventory_unit}}</text>
							</view>
						</view>
						<view class="grouostart-left">
							<view class="start">
								<view class="startPrice shopColor text-wei PriceRise">每隔{{item.raise_time}}分钟涨价{{item.raise_price}}
									<text class="donwn"> </text>
								</view>
								<view class="shopSpecifications">{{item.spec[0].title}}:{{item.spec[0].value[0]}}</view>
							</view>

							<view class="sprice">
								<text class="initialPrice nowPrice">当前价格</text>
								<text class="startWei">￥</text>
								<text class="initialPrice">{{item.nowPrice}}</text>
								<text class="txtCol-group startWei">/{{item.inventory_unit}}</text>
							</view>
						</view>
					</view>
					<view class="group-bottom">
						<view class="group-bottom-left">
							<text class="shopTitle groupLeft {{item.color_type == 1?'shopColor':''}} {{item.color_type == 2?'shopColor2':''}} {{item.color_type == 3?'shopColor3':''}}">{{item.title}}</text>
							<text class="minimum groupLeft">最低订购量{{item.goods_number}}</text>
						</view>
						<view class="group-bottom-left ">
							<text class="shopTitle groupLeft">总库存：{{item.total_inventory}}</text>
							<text class="minimum groupLeft">剩：{{item.inventory}}</text>
						</view>
					</view>
					<view class="purchase-group" wx:if="{{item.purchase}}">
						<view class="liang-group">
							<text class="liantext-group float">数量 </text>
							<view class="zhonged-group background-group float" bindtap="bindPlusGroup">
								<text> +</text>
							</view>
							<view class="zhong-group corlor-group float">
								<input type="number" value="{{numGroup}}" disabled="true" />
							</view>
							<view class="zhonged-group borde-group float" bindtap="bindMinusGroup">
								<text>-</text>
							</view>
						</view>
						<view class="numGroup-num">￥{{item.nowPrice * 100 * numGroup / 100}}</view>
						<view class="purchase-right">
							<view class="purchase-btn" bindtap="personalPurchase">个人采购</view>
							<view class="purchase-btn" bindtap="hotelPurchase" data-price="{{item.nowPrice}}">酒店采购</view>
						</view>

					</view>
				</view>
			</view>
		</view>

		<view class="fix">
			<view class="fast" bindtap="clickHotel"><text>快速下单</text></view>
			<view class="fiximgbox" bindtap="gouwuche">
				<image  class="fiximg" src="../../images/index/car.png"></image>
				<text class="carnub"  wx:if="{{99>=cartNum+personNum && cartNum+personNum !==0}}">{{cartNum+personNum}}</text>
			</view>
		</view>

	</view>


<view class="bottom" wx:if="{{false}}">
  <view class="itemed">
    <view class="itemded" bindtap="clickHotel">
      <text>快速下单</text>
    </view>
  </view>
  <view class="itemed">
    <view class="itemded" bindtap="gouwuche">
      <text>我的购物车
      </text>
      <sup wx:if="{{99>=cartNum+personNum && cartNum+personNum !==0}}" class="total">{{cartNum+personNum}}</sup>
      <sup wx:elif="{{cartNum+personNum>99}}" class="total">99+</sup>
    </view>
  </view>
  <!-- <view class="token" bindtap="eliminate">
    清除token
  </view> -->
</view>