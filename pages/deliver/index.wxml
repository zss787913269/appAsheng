              <view class="itemed" wx:if="{{item.is_send == 0}}" data-id="{{item.order_id}}" data-item="{{item}}" style="margin-top:20rpx;" bindtap="orderReceiving">接单</view>
              <view class="itemed" wx:if="{{item.is_after_type != '' && item.is_after_type != null}}" data-id="{{item.id}}" data-item="{{item}}" style="margin-top:20rpx;" bindtap="returnAndExchange">
