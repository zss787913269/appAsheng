<view class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<view class="modal-dialog" wx:if="{{showModal}}">
  <view class="modal-title">商品名：{{shopOneInfo.title}}</view>
  <view class="modal-content">
    <view class="iteme matop">
      <view class="colored">
        <text style="float:left;">数量:</text>
        <input class="weui-input" type="number" value="{{shopNum}}" bindinput="shopNum"/>
      </view>
      <view class="ittui backf9">
       <text style="float:left;">价格:</text>
        <input class="weui-input-price" type="number" value="{{shopPrice}}" bindinput="shopPrice"/>
      </view>
    </view>
  </view>
  <view class="modal-footer">
    <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view>
    <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">确定</view>
  </view>
</view>
<!--弹窗-->
<view class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{tuidanModal}}"></view>
<view class="modal-dialog" wx:if="{{tuidanModal}}">
  <view class="modal-title">退单</view>
  <view class="modal-content">
    <view class="modal-input">
      <input placeholder-class="input-holder" type="text" maxlength="50" bindinput="inputChangeTui" class="input" placeholder="确认可不用填"></input>
    </view>
  </view>
  <view class="modal-footer">
    <view class="btn-cancel" bindtap="onCancelTui" data-status="cancel">确认</view>
    <view class="btn-confirm" bindtap="onConfirmTui" data-status="confirm">拒绝</view>
  </view>
</view>

