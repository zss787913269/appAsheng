<view class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove" wx:if="{{shuliangModal}}"></view>
<view class="modal-dialog" wx:if="{{shuliangModal}}">
  <view class="modal-title">修改数量</view>
  <view class="modal-content">
    <view class="iteme matop">
      <view>
        <view class="matop">品名</view>
        <view>五花肉</view>
      </view>
      <view>
        <view class="matop">规格</view>
        <view>18斤</view>
      </view>
      <view>
        <view class="matop">原数量</view>
        <view>12</view>
      </view>
      <view>
        <view class="matop">新数量</view>
        <view>
          <input style="width:100rpx;border:1px solid #ccc;" type="number" maxlength="10" bindinput="inputChange" class="input" placeholder=""></input>
        </view>
      </view>
    </view>
  </view>
  <view class="modal-footer">
    <view class="btn-cancel" bindtap="onCancel" data-status="cancel">取消</view>
    <view class="btn-confirm" bindtap="onConfirm" data-status="confirm">提交</view>
  </view>
</view>