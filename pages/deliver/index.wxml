<view>
	<view class="swiper-tab">
		<view class=" {{currentTab==1?'active':'swiper-tab-item'}}" data-current="1" bindtap="clickTab">未取货
			<view wx:if="{{ deliveryList.length>0}}" class="total">{{deliveryList.length}}</view>
		</view>
		<view class=" {{currentTab==2?'active':'swiper-tab-item'}}" data-current="2" bindtap="clickTab">配送中
			<view wx:if="{{  PeisongList.length>0}}" class="total">{{PeisongList.length}}</view>
		</view>
		<view class=" {{currentTab==3?'active':'swiper-tab-item'}}" data-current="3" bindtap="clickTab">已完成
			<view wx:if="{{ deliveryListYes.length>0}}" class="total">{{deliveryListYes.length}}</view>
		</view>

	</view>

	<view wx:if="{{currentTab==1}}">
		<view wx:for="{{deliveryList}}" wx:key="index" wx:key="unique" wx:for-index="idx">

			<view class="main">

				<view class="top_box">

					<view class="mytitle">订单编号：{{item.order_no}}</view>
					<view class="timebox"><text class="time">下单时间：{{item.add_time}}</text></view>
					<view class="imgbox" bindtap="detalis" data-id="{{item.id}}" data-shouhuo="{{6}}">
						<image wx:for="{{item.details}}" wx:for-item="list" src="https://second.chchgg.com{{list.images}}" wx:key="index" class="img"></image>
						<view class="more">. . .</view>
					</view>
					<view class="all">
						<text class="count">共{{item.order_goods_count}}件商品，合计：</text><text class="price">￥{{item.price}}</text>
					</view>

				</view>
				<view class="bottom">
					<view  class="quxiao" bindtap="pickOrder" data-id="{{item.id}}">一键取货</view>
					<view  class="queren" >打印订单</view>
				</view>
			</view>

		</view>
	</view>

	<view wx:if="{{currentTab==2}}">
		<view wx:for="{{PeisongList}}" wx:key="index" wx:key="unique" wx:for-index="idx">

			<view class="main">

				<view class="top_box">

					<view class="mytitle">订单编号：{{item.order_no}}</view>
					<view class="timebox"><text class="time">下单时间：{{item.add_time}}</text></view>
					<view class="imgbox" bindtap="goDetail" data-id="{{item.id}}">
						<image wx:for="{{item.items}}" wx:for-item="list" src="{{list.images}}" wx:key="index" class="img"></image>
						<view class="more">. . .</view>
					</view>
					<view class="all">
						<text class="count">共{{item.items_count}}件商品，合计：</text><text class="price">￥{{item.price}}</text>
					</view>

				</view>
				<view class="bottom">
					<view  class="quxiao"  bindtap="enterSend" data-index="{{index}}" data-id="{{item.id}}">确认送达</view>
					<view  class="queren"  bindtap="upload" data-id="{{item.id}}">上传图片</view>
				</view>
			</view>

		</view>
	</view>

