<view class="wuhua">
  <view class="meat">
    <view class="color">
      <text>订单详情</text>
    </view>
  </view>
  <view>

    <scroll-view scroll-x>
      <view class="swiper-tab">
        <view wx:for="{{secondaryClassification}}" wx:key="unique" class="swiper-tab-item {{currentTab==item.category_id?'active':''}}" data-current="{{item.category_id}}" bindtap="clickTab" data-index="{{index}}">{{item.name}}
        </view>
      </view>
    </scroll-view>
  </view>
  <view class="shopatt">
  <block wx:for="{{secondaryClassShop}}" wx:key="index">
         <view class="shopatt-left">
      <view class="shopnum">
      <view> {{item.title}}</view>
        <view class="fleft">数量：</view>
        <view class="fleft numAdd numstor" bindtap="add" data-index="{{index}}" data-id="{{item.id}}" wx:if="{{orderlist.status < 2}}">+</view>
        <view class="fleft" style="margin-left:30rpx;">{{item.buy_number}}</view>
        <view class="fleft numstor numcen" bindtap="sub" data-index="{{index}}" data-id="{{item.id}}" wx:if="{{orderlist.status < 2}}">-</view>
      </view>
      <view style="margin-top:10rpx;" wx:for="{{item.spec}}" wx:key="index">
        <text wx:if="{{item.value != ''}}" style="margin-left:10rpx;">{{item.type}}</text>
        <text wx:if="{{item.value != ''}}" style="margin-left:10rpx;">{{item.value}}</text>
      </view>
      <view class="exchange" bindtap="exchange" data-item="{{item}}">退换货</view>
    </view>
    <view class="shopatt-right" bindtap="deletShop" wx:if="{{orderlist.status < 2}}" data-id="{{item.id}}">
      <text>删除商品</text>
    </view>
    <view class="addOrder" bindtap="addSelfShop" data-id="{{item.id}}">
      <text>添加到自购单</text>
    </view>
  </block>
   
  </view>

</view>