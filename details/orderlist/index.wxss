

.swiper-tab {
  padding: 0 40rpx;
  display: flex;
}

.swiper-tab-item {
  height: 66rpx;
  width: 50%;
  font-size: 30rpx;
  background: #8bc76a;
  color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  line-height: 66rpx;
}

.swiper-tab-item:nth-child(1) {
  border-radius: 10rpx 0rpx 0rpx 10rpx;
}

.swiper-tab-item:nth-child(3) {
  border-radius: 0rpx 10rpx 10rpx 0rpx;
}


.title{
  height: 300rpx;
  width: 95%;
  margin: 20rpx auto;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
  
}
.header{
  width: 100%;
  height: 80rpx;
  line-height: 50rpx;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #ccc; 
}
.content{
  display: flex;
  height: 220rpx;
   padding-left: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
}
.content view{
  margin:10rpx 0; 
}
.color{
  color: #96cc79;
}

.huo{
  line-height: 50rpx;
 display: flex;
  flex-flow: column;
}
.zhong{
  width: 150rpx;
  height: 60rpx;
  background:#96cc79;
  color: #fff; 
  text-align: center;
  line-height: 60rpx;
  border-radius: 10rpx;
  margin-top: 50rpx 
}

.item{
  height: 220rpx;
  display: flex;
  align-items: center;
  padding-right: 30rpx;
  box-sizing: border-box;
}

.active {
  background: #40B15D;
}
.actived {
  background: #ff9d34;
  color: #fff;
}