<view>
	<view class="swiper-tab">
		<view class=" {{currentTab==1?'active':'swiper-tab-item'}}" data-current="1" bindtap="clickTab">未确认
			<view wx:if="{{ wqr.length!==0}}" class="total">{{wqr.length}}</view>
		</view>
		<view class=" {{currentTab==2?'active':'swiper-tab-item'}}" data-current="2" bindtap="clickTab">未付款
			<view wx:if="{{  wfk.length!==0}}" class="total">{{wfk.length}}</view>
		</view>
		<view class=" {{currentTab==3?'active':'swiper-tab-item'}}" data-current="3" bindtap="clickTab">已付款
			<view wx:if="{{ yfk.length!==0}}" class="total">{{yfk.length}}</view>
		</view>
		<view class=" {{currentTab==4?'active':'swiper-tab-item'}}" data-current="4" bindtap="clickTab">待验收
			<view wx:if="{{ dys.length!==0}}" class="total">{{dys.length}}</view>
		</view>
		<view class=" {{currentTab==5?'active':'swiper-tab-item'}}" data-current="5" bindtap="clickTab">已完成
			<view wx:if="{{  ywc.length!==0}}" class="total">{{ywc.length}}</view>
		</view>
	</view>

</view>

<view wx:if="{{currentTab==1}}">

	<!-- <view class="nodd" wx:if="{{unconfirmed.length == 0}}">
		<text>没有订单</text>
	</view> -->
	<!-- 下面 -->
	<!-- <view class="title" wx:for="{{unconfirmed}}" wx:key="unique" wx:for-index="idx"> -->

	<view wx:for="{{unconfirmed}}" wx:key="index" wx:key="unique" wx:for-index="idx">

		<view class="main">

			<view class="top_box">

				<view class="mytitle">订单编号：{{item.order_no}}</view>
				<view class="timebox"><text class="time">下单时间：{{item.add_time}}</text></view>
				<view class="imgbox" bindtap="goDetail"  data-id="{{item.id}}">
					<image wx:for="{{item.items}}" wx:for-item="list" src="{{list.images}}" wx:key="index" class="img"></image>
					<view class="more"  >. . .</view>
				</view>
				<view class="all">
					<text class="count">共{{item.items_count}}件商品，合计：</text><text class="price">￥{{item.price}}</text>
				</view>

			</view>
			<view class="bottom">
				<view bindtap="cancelOrder" class="quxiao" data-id="{{item.id}}">取消订单</view>
				<view bindtap="confirmOrder" class="queren" data-id="{{item.id}}">确认订单</view>
			</view>
		</view>



	</view>
	<!-- <view class="b-bottom">
