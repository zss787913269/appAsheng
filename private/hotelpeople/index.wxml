<view>
	<view class="swiper-tab">
		<view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">未确认
			<sup wx:if="{{ 99>=hotelOrder>0 && hotelOrder!==0}}" class="total">{{hotelOrder}}</sup>
			<sup wx:elif="{{ hotelOrder>99 }}" class="total">99+</sup>
		</view>
		<view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">未付款
			<sup wx:if="{{ 99>=myOrder>0 && myOrder!==0}}" class="total">{{myOrder}}</sup>
			<sup wx:elif="{{ myOrder>99 }}" class="total">99+</sup>
		</view>
    	<view class="swiper-tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="clickTab">已付款
			<sup wx:if="{{ 99>=myOrder>0 && myOrder!==0}}" class="total">{{myOrder}}</sup>
			<sup wx:elif="{{ myOrder>99 }}" class="total">99+</sup>
		</view>
    	<view class="swiper-tab-item {{currentTab==4?'active':''}}" data-current="4" bindtap="clickTab">待验收
			<sup wx:if="{{ 99>=myOrder>0 && myOrder!==0}}" class="total">{{myOrder}}</sup>
			<sup wx:elif="{{ myOrder>99 }}" class="total">99+</sup>
		</view>
    	<view class="swiper-tab-item {{currentTab==5?'active':''}}" data-current="5" bindtap="clickTab">已完成
			<sup wx:if="{{ 99>=myOrder>0 && myOrder!==0}}" class="total">{{myOrder}}</sup>
			<sup wx:elif="{{ myOrder>99 }}" class="total">99+</sup>
		</view>

	</view>

</view>

<view wx:if="{{currentTab==1}}">

	<view class="nodd" wx:if="{{unconfirmed.length == 0}}">
		<text>没有订单</text>
	</view>
	<!-- 下面 -->
	<view class="title" wx:for="{{unconfirmed}}" wx:key="unique" wx:for-index="idx">
		<view>
			<view class="title1">
				<view class="content">
				
					<view class="huo">
						<text style="display:flex">订单号：{{item.order_no}}</text>
						<text>{{item.describe}}</text>
					
					</view>
					<view class="color" bindtap="detalis" data-id="{{item.id}}" style="margin-top:20rpx;">
						<text>点击查看订单详情</text>
					</view>
					<view class="confirmCancel">
						<view >
							<view class="confirm text" bindtap="confirmOrder" data-id="{{item.id}}">确认订单</view>
							<view class="cancel text" bindtap="cancelOrder" data-id="{{item.id}}">取消订单</view>
						</view>
					</view>
			
					
				
					<view class="invalid">
						<text wx:if="{{item.status == 5}}">已取消</text>
					</view>
				</view>
			</view>
		</view>
	
	</view>
	<view class="bottom">
		<view class="itemed">
			<view class="itemded">
				<button open-type="contact" class="btn">联 系 我 们</button>
			</view>
		</view>
	</view>
</view>
