						<text class="payment" wx:if="{{item.pay_status_name == '待支付'}}">支付</text>
					</view>
					<view>
						<!-- <text class="payment" wx:if="{{item.status == '4'||item.status == '3'||item.status == '2'}}" data-value="{{item}}" bindtap="print">打印</text> -->
