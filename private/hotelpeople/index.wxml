<view wx:if="{{currentTab==1}}">

	<view wx:for="{{wfk}}" wx:key="index" wx:key="unique" wx:for-index="idx">

		<view class="main">

			<view class="top_box">
				<view class="more" bindtap="goDetail" data-id="{{item.id}}">查看详情</view>
				<view class="mytitle">订单编号：{{item.order_no}}</view>
				<view class="timebox"><text class="time">下单时间：{{item.add_time}}</text></view>
				<view class="imgbox">
					<view wx:for="{{item.items}}" wx:for-item="list" wx:key="index" class="boxfelx">
						<image wx:if="{{list.images}}" src="{{list.images}}" class="img"></image>
						<image wx:else src="http://second.chchgg.com/static/index/default/images/logo.jpg" class="img"></image>
						<text class="flex-title">{{list.title}}</text>
					</view>
				</view>
				<view class="all">
					<text class="count">共{{item.items_count}}件商品，合计：</text><text class="price">￥{{item.total_price}}</text>
				</view>

			</view>
			<view class="bottom">
				<view class="myab">下单员：{{item.user.nickname}}</view>
				<view class="queren" wx:if="{{hotel_role != 1}}" bindtap="payment" data-docat="{{item.is_docat}}" data-id="{{item.id}}" data-num="{{item.items_count}}" data-price="{{item.total_price}}">支付</view>
			</view>
		</view>



	</view>

</view>
