.subject{
  height: auto;
  width: 95%;
  margin: 20rpx auto;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 15rpx rgba(0, 0, 0, 0.1);
}
.content{
  width: 100%;
  height: 100rpx;
   display: flex;
   margin-bottom:30rpx; 
}
.leftject{
  width: 75%;
  height: 100%;
  line-height: 100rpx;
  display: flex;
  justify-content: space-between; 
}
.leftsubject{
  width: 75%;
  height: 100%;
}
.leftsubject view{
  width: 100%;
  height: 50%;
  display: flex;
